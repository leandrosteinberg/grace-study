// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTENTICACIÓN Y USUARIOS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  googleId      String?   @unique
  name          String?
  image         String?
  role          UserRole  @default(PARTICIPANT)
  isGedytMember Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?

  // Relaciones
  profile               UserProfile?
  sessions              Session[]
  accounts              Account[]
  moduleProgress        UserModuleProgress[]
  evaluationAttempts    EvaluationAttempt[]
  responses             Response[]
  emailLogs             EmailLog[]
  contentInteractions   ContentInteraction[]
  uploadedMedia         MediaItem[]

  @@index([email])
  @@index([googleId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// PERFIL DEL USUARIO
// ============================================

model UserProfile {
  id                    String           @id @default(cuid())
  userId                String           @unique
  age                   Int?
  country               String?
  gender                Gender?
  yearsSinceGraduation  Int?
  yearsPerformingEgd    Int?
  egdPerYear            Int?
  hasFellowship         Boolean          @default(false)
  hasAdvancedTraining   Boolean          @default(false)
  experienceLevel       ExperienceLevel?
  knewGraceBefore       Boolean          @default(false)
  usesOtherScales       String[]
  usesSimethicone       Boolean          @default(false)
  institutionType       InstitutionType?
  hasAdvancedImaging    Boolean          @default(false)
  wantsFutureStudies    Boolean          @default(false)
  completedAt           DateTime?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// MÓDULOS EDUCATIVOS
// ============================================

model Module {
  id                       String     @id @default(cuid())
  orderIndex               Int        @unique
  title                    String
  slug                     String     @unique
  description              String?    @db.Text
  estimatedDurationMinutes Int
  moduleType               ModuleType
  isActive                 Boolean    @default(true)
  createdAt                DateTime   @default(now())
  updatedAt                DateTime   @updatedAt

  // Relaciones
  contents     ModuleContent[]
  userProgress UserModuleProgress[]
}

model ModuleContent {
  id          String      @id @default(cuid())
  moduleId    String
  orderIndex  Int
  contentType ContentType
  title       String
  content     Json
  isRequired  Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  module       Module                 @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  interactions ContentInteraction[]

  @@index([moduleId])
}

model UserModuleProgress {
  id          String         @id @default(cuid())
  userId      String
  moduleId    String
  status      ProgressStatus @default(NOT_STARTED)
  startedAt   DateTime?
  completedAt DateTime?
  timeSpent   Int            @default(0)

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
  @@index([userId])
  @@index([moduleId])
}

model ContentInteraction {
  id              String          @id @default(cuid())
  userId          String
  contentId       String
  interactionType InteractionType
  data            Json?
  createdAt       DateTime        @default(now())

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  content ModuleContent @relation(fields: [contentId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([contentId])
}

// ============================================
// BIBLIOTECA DE MEDIOS
// ============================================

model MediaItem {
  id                String    @id @default(cuid())
  mediaType         MediaType
  organ             Organ
  correctGraceScore Int
  fileUrl           String
  thumbnailUrl      String?
  description       String?   @db.Text
  isTraining        Boolean   @default(false)
  isActive          Boolean   @default(true)
  metadata          Json?
  uploadedById      String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  uploadedBy User       @relation(fields: [uploadedById], references: [id])
  responses  Response[]

  @@index([organ])
  @@index([correctGraceScore])
  @@index([isActive])
}

// ============================================
// EVALUACIONES
// ============================================

model EvaluationAttempt {
  id                  String    @id @default(cuid())
  userId              String
  round               Round
  startedAt           DateTime  @default(now())
  completedAt         DateTime?
  totalTimeSeconds    Int?
  round2ScheduledDate DateTime?
  round2EmailSent     Boolean   @default(false)

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses Response[]

  @@index([userId])
  @@index([round])
  @@index([round2ScheduledDate])
}

model Response {
  id              String         @id @default(cuid())
  attemptId       String
  userId          String
  mediaId         String
  organ           Organ
  graceScoreGiven Int
  clinicalAction  ClinicalAction?
  responseTimeMs  Int
  orderShown      Int
  round           Round
  isCorrect       Boolean
  respondedAt     DateTime       @default(now())

  attempt   EvaluationAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaItem MediaItem         @relation(fields: [mediaId], references: [id])

  @@index([userId])
  @@index([attemptId])
  @@index([mediaId])
  @@index([round])
}

// ============================================
// SISTEMA DE EMAILS
// ============================================

model EmailLog {
  id        String    @id @default(cuid())
  userId    String
  emailType EmailType
  sentAt    DateTime  @default(now())
  delivered Boolean   @default(false)
  opened    Boolean   @default(false)
  clicked   Boolean   @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([emailType])
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  ADMIN
  PARTICIPANT
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum ExperienceLevel {
  EXPERT
  INTERMEDIATE
  NON_EXPERT
}

enum InstitutionType {
  PUBLIC
  PRIVATE
  MIXED
}

enum ModuleType {
  EDUCATIONAL
  EVALUATION
}

enum ContentType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  QUIZ
  INTERACTIVE
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum InteractionType {
  VIEW
  COMPLETE
  QUIZ_ATTEMPT
}

enum MediaType {
  IMAGE
  VIDEO
}

enum Organ {
  ESOPHAGUS
  STOMACH
  DUODENUM
}

enum Round {
  ROUND_1
  ROUND_2
}

enum ClinicalAction {
  DO_NOTHING
  WASH_WATER
  WASH_SIMETHICONE
  REPEAT_EXAM
}

enum EmailType {
  WELCOME
  ROUND_2_REMINDER
  ROUND_2_LATE_REMINDER
  CERTIFICATE
}